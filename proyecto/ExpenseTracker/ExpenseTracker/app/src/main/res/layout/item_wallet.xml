<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/celeste_input">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="18dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/walletNameText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nombre de la Billetera"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="@color/azul_titulo"
                android:fontFamily="sans-serif-medium" />

            <ImageButton
                android:id="@+id/walletMenuButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_more"
                android:tint="@color/azul_hint"
                android:contentDescription="Opciones"
                android:focusable="false"
                android:clickable="true" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:background="@color/celeste_fondo"
            android:padding="8dp"
            android:clipToPadding="false"
            android:layout_marginBottom="8dp"
            android:elevation="2dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/walletPendingCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pendientes por pagar: 0"
                android:textSize="15sp"
                android:textColor="@color/azul_hint"
                android:fontFamily="sans-serif"
                android:gravity="start"/>

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="@color/celeste_borde"
                android:layout_marginHorizontal="6dp"/>

            <TextView
                android:id="@+id/walletPaidCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pagados: 0"
                android:textSize="15sp"
                android:textColor="@color/primary_blue"
                android:fontFamily="sans-serif"
                android:gravity="end"/>
        </LinearLayout>


        <Button
            android:id="@+id/shareButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Compartir"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:background="@drawable/bg_btn_celeste"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp"
            android:letterSpacing="0.05"
            android:elevation="4dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>