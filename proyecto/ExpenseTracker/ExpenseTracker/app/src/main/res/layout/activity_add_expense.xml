<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/background_soft_blue"
    android:padding="32dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <TextView
        android:text="Agregar gasto o ingreso"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/text_normal"
        android:layout_marginBottom="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/etDescripcion"
        android:hint="DescripciÃ³n"
        android:background="@color/white"
        android:padding="14dp"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <EditText
        android:id="@+id/etMonto"
        android:hint="Monto"
        android:inputType="numberDecimal"
        android:background="@color/white"
        android:padding="14dp"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <EditText
        android:id="@+id/etFecha"
        android:hint="Fecha"
        android:focusable="false"
        android:clickable="true"
        android:background="@color/white"
        android:padding="14dp"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <Spinner
        android:id="@+id/spinnerCategoria"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="16dp"/>

    <RadioGroup
        android:id="@+id/rgTipo"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="22dp">

        <RadioButton
            android:id="@+id/radioGasto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gasto"
            android:buttonTint="@color/primary_marine_blue"
            android:textColor="@color/primary_marine_blue"
            android:layout_marginEnd="32dp"
            android:checked="true" />

        <RadioButton
            android:id="@+id/radioIngreso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingreso"
            android:buttonTint="@color/income_light_blue"
            android:textColor="@color/income_light_blue"/>
    </RadioGroup>

    <CheckBox
        android:id="@+id/checkboxRecurrente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginBottom="14dp"
        android:text="Gasto recurrente"
        android:textColor="@color/text_normal"
        android:gravity="start|center_vertical"
        android:textAlignment="viewStart"/>
    <Button
        android:id="@+id/btnGuardar"
        android:text="GUARDAR"
        android:textAllCaps="true"
        android:background="@color/primary_marine_blue"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="56dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:gravity="center" />

</LinearLayout>